<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.sampath.ncapp.MainActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtWatchMovie"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:hint="Enter the name of the movie..."/>
    <Button
            android:text="Post Notification for Movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnWatchMovie" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edtWatchMovie"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Settings for Movie Notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMovieSettings" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnWatchMovie" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>
